<div class="container">
    <div class="row">
        {{!-- <div class="col-lg-12 card"> --}}
            {{#if data.length}}
                {{#each data}}
                    <div class="card">
                        {{!-- <div class="card-body"> --}}
                            <a class="card-header" href="{{this.link}}">{{this.title}}<button class="btn btn-primary save"data-id="{{this._id}}" id="sav-btn">Save</button></a>
                            <h6 class="card-text">{{this.summary}}</h6>
                            <ul class="list-group list-group-flush">
                                {{#if this.comments.length}}
                                    {{#each this.comments}}
                                        <li class="list-group-item">{{this.title}}<button class="btn btn-primary delete-comment"data-id="{{this._id}}">Delete</button></li>
                                    {{/each}}
                                {{/if}}
                            </ul>
                            
                        {{!-- </div> --}}
                    </div>
                {{/each}}
            {{else}}
                
            {{/if}}
            
        {{!-- </div> --}}
    </div>
</div>